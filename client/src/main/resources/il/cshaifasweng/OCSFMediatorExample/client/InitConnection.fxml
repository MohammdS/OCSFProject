<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="118.0" prefWidth="203.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.ConnectionController">
    <children>
        <Label text="Server Connection" />
        <HBox spacing="10">
            <VBox spacing="5">
                <Label text="Host:" />
                <Label alignment="CENTER" prefHeight="36.0" prefWidth="28.0" text="Port:" textAlignment="CENTER" />
            </VBox>
            <VBox spacing="5">
                <TextField fx:id="hostField" />
                <TextField fx:id="portField" />
            </VBox>
        </HBox>
        <Button fx:id="connectButton" alignment="CENTER" contentDisplay="TOP" layoutX="10.0" layoutY="10.0" prefHeight="26.0" prefWidth="64.0" text="Connect" />
    </children>
</VBox>
